const infoBox = document.querySelector(".info-placeholder");

// 선택된 노래 제목 표시
const selectedTitle = document.getElementById("selected-title");

// 재생 버튼
const playButton = document.getElementById("play-btn");

// 모든 앨범 이미지 가져오기
const albums = document.querySelectorAll(".album");

let currentURL = ""; // 현재 선택된 노래의 유튜브 URL 저장

// 앨범 클릭 이벤트
albums.forEach(album => {
    album.addEventListener("click", () => {
        const title = album.getAttribute("data-title");
        const info = album.getAttribute("data-info");
        const url = album.getAttribute("data-url");

        // 제목 반영
        selectedTitle.innerText = title;

        // 정보 반영
        infoBox.innerText = info;

        // 재생 링크 저장
        currentURL = url;
    });
});

// 재생 버튼 클릭 시 유튜브 링크 열기
playButton.addEventListener("click", () => {
    if (currentURL) {
        window.open(currentURL, "_blank");
    } else {
        alert("먼저 노래를 선택해주세요!");
    }
});
